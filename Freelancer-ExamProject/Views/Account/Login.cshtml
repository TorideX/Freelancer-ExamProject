@model Freelancer_Exam.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    .border-md {
        border-width: 2px;
    }
     
    .input-group-prepend{
        width: 45px !important;
    }
    
    body {
        min-height: 100vh;
    }
    
    .form-control:not(select) {
        padding: 1.5rem 0.5rem;
    }
    
    select.form-control {
        height: 52px;
        padding-left: 0.5rem;
    }
    
    .form-control::placeholder {
        color: #ccc;
        font-size: 0.9rem;
    }
    .form-control:focus {
        box-shadow: none;
        border-color: #cce2ff !important;
    }
    
</style>

<div class="container">
    <h1 class="display-4 mt-lg-5 mb-4 text-center">Login</h1>
    <div class="col-md-6 col-lg-6 mx-auto">
        <form asp-action="Login" asp-controller="Account" method="post">
            <div class="row">

                <div class="input-group col-lg-12 mb-4">
                    <div class="input-group-prepend">
                        <span class="input-group-text bg-white px-3 border-md border-right-0">
                            <i class="fa fa-envelope text-muted"></i>
                        </span>
                    </div>
                    <input asp-for="Email" placeholder="Email Address" class="form-control bg-white border-left-0 border-md">
                </div>


                <div class="input-group col-lg-12 mb-4">
                    <div class="input-group-prepend">
                        <span class="input-group-text bg-white px-3 border-md border-right-0">
                            <i class="fa fa-lock text-muted"></i>
                        </span>
                    </div>
                    <input asp-for="Password" placeholder="Password" class="form-control bg-white border-left-0 border-md">
                </div>


                <div class="form-group col-lg-12 mx-auto mb-0">
                    <input type="submit" class="btn btn-primary btn-block py-2" value="Login"/>
                </div>

                <div class="text-center w-100 mt-2">
                    <p class="text-muted ">Don't have an account?<a asp-action="Register" asp-controller="Account" class="text-primary ml-2">Register</a></p>
                </div>

            </div>
        </form>
    </div>
</div>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
<script src="/lib/jquery/dist/jquery.js"></script>
<script> 
$(function () {
    $('input, select').on('focus', function () {
        $(this).parent().find('.input-group-text').css('border-color', '#cce2ff');
    });
    $('input, select').on('blur', function () {
        $(this).parent().find('.input-group-text').css('border-color', '#ced4da');
    });
});
</script>